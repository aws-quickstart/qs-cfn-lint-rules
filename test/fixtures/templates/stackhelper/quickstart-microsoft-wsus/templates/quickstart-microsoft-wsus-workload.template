                - iam:PassRole
              Resource: !Sub 'arn:${AWS::Partition}:iam::${AWS::AccountId}:role/${AWSQuickstartWSUSRole}'
        PolicyName: QS-WSUS-SSM-PassRole
      ManagedPolicyArns:
