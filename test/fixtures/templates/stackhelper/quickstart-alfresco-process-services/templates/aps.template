    Type: AWS::IAM::Role
    DependsOn:
    - APSAutoScalingGroup
    Properties:
      AssumeRolePolicyDocument:
        Version: 2012-10-17
        Statement:
        - Effect: Allow
          Principal:
            Service:
            - lambda.amazonaws.com
