            Version: '2012-10-17'
            Statement:
              - Action:
                  - ec2:Describe*
                Effect: Allow
                Resource: '*'
              - Resource:
                  - !If [CreateS3Bucket, !Join ['', ['arn:', !FindInMap [RegionMap,
                          !Ref 'AWS::Region', ARN], ':s3:::', !Ref 'S3Bucket']], !Join [
                      '', ['arn:', !FindInMap [RegionMap, !Ref 'AWS::Region', ARN],
                        ':s3:::', !Ref 'optionalExistingS3Bucket']]]
                  - !If [CreateS3Bucket, !Join ['', ['arn:', !FindInMap [RegionMap,
