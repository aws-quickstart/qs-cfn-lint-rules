      Statistic: Average
      Period: '60'
      EvaluationPeriods: '1'
      Threshold: '85'
      AlarmActions:
        - !Ref 'SwarmScaleUpPolicy'
      Dimensions:
        - Name: AutoScalingGroupName
          Value: !Ref 'SwarmScalingGroup'
      ComparisonOperator: GreaterThanThreshold
