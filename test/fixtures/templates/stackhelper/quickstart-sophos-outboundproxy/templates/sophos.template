    Type: AWS::EC2::SubnetRouteTableAssociation
    Properties:
      SubnetId: !Ref 'SwarmSubnet1'
      RouteTableId: !Ref 'SwarmRouteTable'
  SwarmSubnet2RouteTableAssociation:
    Type: AWS::EC2::SubnetRouteTableAssociation
