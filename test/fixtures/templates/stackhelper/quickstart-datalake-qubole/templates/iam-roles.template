AWSTemplateFormatVersion: '2010-09-09'
Description: Creates IAM roles used for Qubole Datalake.
Resources:
  QuboleInstanceProfile:
    Properties:
      InstanceProfileName: !Ref 'QuboleRole'
      Roles:
        - !Ref 'QuboleRole'
    Type: AWS::IAM::InstanceProfile
  CrossAccountPolicyForQuboleRole:
    Properties:
      PolicyDocument:
        Statement:
          - Action: iam:GetInstanceProfile
            Effect: Allow
            Resource: !GetAtt 'QuboleInstanceProfile.Arn'
          - Action: iam:PassRole
            Effect: Allow
            Resource: !GetAtt 'QuboleRole.Arn'
        Version: '2012-10-17'
      PolicyName: CrossAccountPolicy
      Roles:
        - !Ref 'QuboleRole'
    Type: AWS::IAM::Policy
  QuboleRole:
    Properties:
      AssumeRolePolicyDocument:
        Statement:
          - Action:
              - sts:AssumeRole
            Effect: Allow
            Principal:
              Service:
                - ec2.amazonaws.com
          - Action: sts:AssumeRole
            Condition:
              StringEquals:
                sts:ExternalId:
                  - !Ref 'QuboleExternalId'
            Effect: Allow
            Principal:
              AWS: !Sub 'arn:aws:iam::${QuboleAWSAccountId}:root'
        Version: '2012-10-17'
      Path: /
      Policies:
        - PolicyDocument:
            Statement:
              - Action:
                  - ec2:AuthorizeSecurityGroupEgress
                  - ec2:AuthorizeSecurityGroupIngress
                  - ec2:AttachVolume
                  - ec2:CancelSpotInstanceRequests
                  - ec2:CreateSecurityGroup
                  - ec2:CreateTags
                  - ec2:CreateVolume
                  - ec2:DeleteSecurityGroup
                  - ec2:DeleteTags
                  - ec2:DeleteVolume
                  - ec2:Describe*
                  - ec2:DescribeVolume
                  - ec2:DetachVolume
                  - ec2:ImportKeyPair
                  - ec2:ModifyInstanceAttribute
                  - ec2:RequestSpotInstances
                  - ec2:RunInstances
                  - ec2:StartInstances
                  - ec2:StopInstances
                  - ec2:TerminateInstances
                Effect: Allow
                Resource:
                  - '*'
              - Action:
                  - sts:DecodeAuthorizationMessage
                Effect: Allow
                Resource:
                  - '*'
            Version: '2012-10-17'
          PolicyName: EC2Policy
        - PolicyDocument:
            Statement:
              - Action:
                  - s3:DeleteObject
                  - s3:GetObject
                  - s3:GetObjectAcl
                  - s3:PutObject
                  - s3:PutObjectAcl
                  - s3:GetBucketAcl
                  - s3:GetBucketLocation
                  - s3:ListBucket
                Effect: Allow
                Resource:
                  - !Sub 'arn:aws:s3:::${QuboleBucketName}/*'
                  - !Sub 'arn:aws:s3:::${QuboleBucketName}'
              - Action:
                  - s3:GetObject
                  - s3:ListBucket
                Effect: Allow
                Resource:
                  - '*'
              - Action:
                  - s3:ListAllMyBuckets
                Effect: Allow
                Resource:
                  - '*'
            Version: '2012-10-17'
          PolicyName: S3Policy
    Type: AWS::IAM::Role
Parameters:
  QuboleAWSAccountId:
    Description: >-
      Qubole AWS account ID. Navigate to Control Panel in UI at https://api.qubole.com/v2/control-panel
      and click the Account Settings tab on the left pane. Select IAM Role radio button
      under Access Mode (Keys/IAM Roles) section and copy Trusted Principal AWS Account
      ID that is displayed.
    NoEcho: 'true'
    Type: String
  QuboleBucketName:
    Description: S3 bucket name for the Qubole data. Qubole bucket name can include
      numbers, lowercase letters, uppercase letters, and hyphens (-). It cannot start
      or end with a hyphen (-).
    Type: String
  QuboleExternalId:
    Description: >-
      Qubole account External ID. Navigate to Control Panel in UI at https://api.qubole.com/v2/control-panel
      and click the Account Settings tab on the left pane. Select IAM Role radio button
      under Access Mode (Keys/IAM Roles) section and copy External ID that is displayed.
    NoEcho: 'true'
    Type: String
Outputs:
  QuboleRoleARN:
    Description: Qubole role ARN
    Value: !GetAtt 'QuboleRole.Arn'
  InstanceProfileName:
    Description: Name of InstanceProfile
    Value: !Ref 'QuboleInstanceProfile'
