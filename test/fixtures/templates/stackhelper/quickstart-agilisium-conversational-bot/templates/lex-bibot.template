                    "Statement": [
                        {
                            "Sid": "LexPermissions",
                            "Effect": "Allow",
                            "Action": [
                                "lex:*"
                            ],
                            "Resource": "*"
                        },
                        {
                            "Sid": "S3Permissions",
                            "Effect": "Allow",
                            "Action": [
                                "s3:GetObject",
                                "s3:PutObject",
                                "s3:ListBucket",
                                "s3:DeleteObject",
                                "s3:DeleteObjectVersion",
                                "s3:PutObjectAcl"
                            ],
                            "Resource": [
                                {
                                    "Fn::If": [
                                        "UseCustomData",
	                                    {"Fn::Join": [
	                                        "",
	                                        [
	                                            "arn:aws:s3:::",
	                                            {
	                                                "Ref": "CustomDataBucketName"
	                                            }
	                                        ]
	                                    ]},
                                        {"Ref" : "AWS::NoValue"}
                                        ]
                                },
                                {
                                    "Fn::If": [
                                        "UseCustomData",
	                                    {"Fn::Join": [
	                                        "",
	                                        [
	                                            "arn:aws:s3:::",
	                                            {
	                                                "Ref": "CustomDataBucketName"
	                                            },
                                                "/*"
	                                        ]
	                                    ]},
                                        {"Ref" : "AWS::NoValue"}
                                        ]
                                },
                                {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "arn:aws:s3:::",
                                            {
                                                "Ref": "QSS3BucketName"
                                            }
                                        ]
                                    ]
                                },
                                {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "arn:aws:s3:::",
                                            {
                                                "Ref": "QSS3BucketName"
                                            },
                                            "/*"
                                        ]
                                    ]
                                },
                                {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "arn:aws:s3:::",
                                            {
                                                "Ref": "LambdaZipsBucket"
                                            }
                                        ]
                                    ]
                                },
                                {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "arn:aws:s3:::",
                                            {
                                                "Ref": "LambdaZipsBucket"
                                            },
                                            "/*"
                                        ]
                                    ]
                                },
                                {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "arn:aws:s3:::",
                                            {
                                                "Ref": "S3WebBucket"
                                            }
                                        ]
                                    ]
                                },
                                {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "arn:aws:s3:::",
                                            {
                                                "Ref": "S3WebBucket"
                                            },
                                            "/*"
                                        ]
                                    ]
                                }
                            ]
                        },
                        {
                            "Sid": "CloudWatchLogsPermissions",
                            "Effect": "Allow",
                            "Action": [
                                "logs:CreateLogGroup",
                                "logs:CreateLogStream",
                                "logs:PutLogEvents"
                            ],
                            "Resource": "*"
                        }
                    ]
                }
            }
        },
        "CustomLambda": {
            "Type": "AWS::Lambda::Function",
            "DependsOn": [
                "LexCustomLambdaPolicy",
                "LexLambdaInvokePermission",
                "CopyZips"
                ],
            "Properties": {
                "Handler": "lex_custom_lambda.lambda_handler",
                "Role": {
                    "Fn::GetAtt": [
                        "LexCustomLambdaRole",
                        "Arn"
                    ]
                },
                "Code": {
                    "S3Bucket": {
                        "Ref": "LambdaZipsBucket"
                    },
                    "S3Key": {
                        "Fn::Sub": "${QSS3KeyPrefix}functions/packages/lex_custom_lambda/lex_custom_lambda.zip"
                    }
                },
                "Runtime": "python3.6",
                "Timeout": 300
            }
        },
        "LexBot": {
            "Type": "Custom::LexBot",
            "DependsOn": "CustomLambda",
            "Properties": {
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "CustomLambda",
                        "Arn"
                    ]
                },
                "BucketName": {
                    "Ref": "QSS3BucketName"
                },
                "LexJsonKey": {
                    "Fn::Sub": "${QSS3KeyPrefix}assets/lex/lex_aws_quickstart.json"
                },
                "LexResourcesPrefix": {
                    "Ref": "LexResourcesPrefix"
                },
                "FulfillmentLambdaArn": {
                    "Fn::GetAtt": [
                        "LexFulfillmentLambda",
                        "Arn"
                    ]
                },
                "SourceBucket": {
                    "Ref": "QSS3BucketName"
                },
                "SourceKey": {
                    "Fn::Sub": "${QSS3KeyPrefix}assets/web"
                },
                "DestinationBucket": {
                    "Ref": "S3WebBucket"
                },
                "DestinationKey": "",
                "CognitoPoolId": {
                    "Ref": "CognitoIdentityPool"
                }
            }
        },
        "RedshiftDataLoaderCustomLambda": {
            "Type": "AWS::Lambda::Function",
            "DependsOn": [
                "S3WebBucket",
                "LexBot",
                "RedshiftStack",
                "CopyZips"
            ],
            "Properties": {
                "Handler": "bootstrap_redshift.lambda_handler",
                "Role": {
                    "Fn::GetAtt": [
                        "LexCustomLambdaRole",
                        "Arn"
                    ]
                },
                "Code": {
                    "S3Bucket": {
                        "Ref": "LambdaZipsBucket"
                    },
                    "S3Key": {
                        "Fn::Sub": "${QSS3KeyPrefix}functions/packages/bootstrap_redshift/bootstrap_redshift.zip"
                    }
                },
                "Runtime": "python3.6",
                "Timeout": 600,
                "Environment": {
                    "Variables": {
                        "LOG_LEVEL": "INFO"
                    }
                },
                "VpcConfig": {
                    "SecurityGroupIds": [
                        {
                            "Fn::GetAtt": [
                                "LexFulfillmentLambdaSecurityGroup",
                                "GroupId"
                            ]
                        }
                    ],
                    "SubnetIds": [
                        {
                            "Ref": "PrivateSubnetId1"
                        },
                        {
                            "Ref": "PrivateSubnetId2"
                        }
                    ]
                }
            }
        },
        "RedshiftDataLoader": {
            "Type": "Custom::RedshiftDataLoader",
            "DependsOn": "RedshiftDataLoaderCustomLambda",
            "Properties": {
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "RedshiftDataLoaderCustomLambda",
                        "Arn"
                    ]
                },
                "DatabaseName": {
                    "Ref": "RedshiftDbName"
                },
                "RedshiftCluster": {
                    "Fn::GetAtt": [
                        "RedshiftStack",
                        "Outputs.RedshiftEndpoint"
                    ]
                },
                "DatabasePort": {
                    "Ref": "RedshiftPort"
                },
                "MasterUsername": {
                    "Ref": "RedshiftUsername"
                },
                "MasterUserPassword": {
                    "Ref": "RedshiftPassword"
                },
                "BucketName": {
                    "Fn::If": [
                        "UseCustomData",
                        {"Ref": "CustomDataBucketName"},
                        {"Ref": "QSS3BucketName"}
                    ]
                },
                "Path": {
                    "Fn::If": [
                        "UseCustomData",
                        {"Ref": "CustomDataKeyPrefix"},
                        {"Fn::Sub": "${QSS3KeyPrefix}assets/data"}
                    ]
                }
            }
        }
    },
    "Outputs": {
        "S3WebsiteURL": {
            "Value": {
                "Fn::GetAtt": [
                    "S3WebBucket",
                    "WebsiteURL"
                ]
            },
            "Description" : "S3 Static Website URL",
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}:S3WebsiteURL"
                }
            }
        },
        "LexBotName": {
            "Value": {
                "Fn::GetAtt": [
                    "LexBot",
                    "BotName"
                ]
            },
            "Description" : "Lex Bot Name",
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}:LexBotName"
                }
            }
        },
        "RedshiftSecurityGroupID": {
            "Value": {
                "Fn::GetAtt": [
                    "RedshiftStack",
                    "Outputs.RedshiftSecurityGroupID"
                ]
            },
            "Description" : "Redshift Security Group ID",
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}:RedshiftSecurityGroupID"
                }
            }
        },
        "RedshiftClusterId": {
            "Value": {
                "Fn::GetAtt": [
                    "RedshiftStack",
                    "Outputs.RedshiftClusterId"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}:RedshiftClusterId"
                }
            }
        },
        "RedshiftEndpoint": {
            "Value": {
                "Fn::GetAtt": [
                    "RedshiftStack",
                    "Outputs.RedshiftEndpoint"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}:RedshiftEndpoint"
                }
            }
        },
        "RedshiftPort": {
            "Value": {
                "Fn::GetAtt": [
                    "RedshiftStack",
                    "Outputs.RedshiftPort"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}:RedshiftPort"
                }
            }
        },
        "RedshiftJdbcUrl": {
            "Value": {
                "Fn::GetAtt": [
                    "RedshiftStack",
                    "Outputs.RedshiftJdbcUrl"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}:RedshiftJdbcUrl"
                }
            }
        }
    }
}
