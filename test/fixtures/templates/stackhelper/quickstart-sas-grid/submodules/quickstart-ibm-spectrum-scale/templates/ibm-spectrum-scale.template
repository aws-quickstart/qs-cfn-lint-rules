                                            "    hostname=`hostname`\n",
                                            "fi\n",
                                            "SERVER_SG=$SERVER_SECURITY_GROUP\n",
                                            "COMPUTE_SG=$COMPUTE_SECURITY_GROUP\n",
                                            "echo SERVER_SG:$SERVER_SG\n",
                                            "echo COMPUTE_SG:$COMPUTE_SG\n",
