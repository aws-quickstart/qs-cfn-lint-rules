                                },
                                "\n",
                                "IP=`ifconfig eth0 | grep 'inet ' | cut -d: -f2 | awk '{print $2}'` && touch /nfs/LustreMGTNodes/$IP \n",
                                "NoOfNodes=`ls /nfs/LustreMGTNodes | wc -l` \n",
