                                "do \n",
                                "echo 'No of IPs are not equal to no of sas grid instances' \n",
                                "NoOfNodes=`ls /nfs/LustreMGTNodes | wc -l` \n",
                                "sleep 5 \n",
                                "done \n",
                                "NodeNumber=`ls /nfs/LustreMGTNodes | nl > /tmp/temp && cat /tmp/temp | grep -w \"$IP\" | cut -f1 | sed -r 's/ //g'` \n",
