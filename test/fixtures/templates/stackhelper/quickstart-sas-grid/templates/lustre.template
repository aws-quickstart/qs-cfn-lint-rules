                                        "                            snap_status = ec2_client.delete_snapshot(SnapshotId=snapshot)\n",
                                        "                            if snap_status[\"ResponseMetadata\"][\"HTTPStatusCode\"] == 200:\n",
                                        "                                print(\"Snapshot deleted successfully..\")\n",
                                        "                else:\n",
                                        "                    print(\"Image '{}' not found\".format(image))\n",
                                        "    else:\n",
                                        "        print(\"Please check the data in DynamoDB table\")\n"
                                    ]
                                ]
                    }
