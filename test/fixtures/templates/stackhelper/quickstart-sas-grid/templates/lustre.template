                                        "            daily_retention = daily_retention.strftime(\"%d-%m-%Y\")\n",
                                        "            daily_image = \"daily\" + \"-\" + row[\"fqdn\"] + \"-\" + daily_retention\n",
                                        "    \n",
                                        "            weekly_retention = today-datetime.timedelta(int(row[\"weekly\"]))\n",
                                        "            weekly_retention = weekly_retention.strftime(\"%d-%m-%Y\")\n",
                                        "            weekly_image = \"weekly\" + \"-\" + row[\"fqdn\"] + \"-\" + weekly_retention\n",
                                        "    \n",
                                        "            for image in [daily_image, weekly_image]:\n",
                                        "                image_info = get_image(ec2_client, image)\n",
                                        "                if image_info is not None:\n",
                                        "                    if image_info[\"state\"] == \"available\":\n",
