                        {
                            "Ref": "License"
                        }
                    ]
                },
                "InstanceType": {
                    "Ref": "InstanceType"
                },
                "SecurityGroups": [{
                    "Ref": "SyncGatewaySecurityGroup"
                }],
                "KeyName": {
                    "Ref": "KeyName"
                },
                "EbsOptimized": true,
                "IamInstanceProfile": {
                    "Ref": "CouchbaseInstanceProfile"
                },
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": ["", [
                            "#!/bin/bash\n",
                            "/opt/aws/bin/cfn-init -v --stack ",
                            {
                                "Ref": "AWS::StackName"
                            },
                            " --resource SyncGatewayLaunchConfiguration ",
                            " --region ",
                            {
                                "Ref": "AWS::Region"
                            },
                            "\n",
                            "/opt/aws/bin/cfn-signal -e $? -r \"Gateway node configured\" --stack ",
                            {
                                "Ref": "AWS::StackName"
                            },
                            " --resource SyncGatewayAutoScalingGroup --region ",
                            {
                                "Ref": "AWS::Region"
                            },
                            "\n"
                        ]]
                    }
                }
            }
        },
        "SyncGatewayELB": {
            "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
            "Properties": {
                "ConnectionDrainingPolicy": {
                    "Enabled": "True"
                },
                "CrossZone": "True",
                "HealthCheck": {
                    "HealthyThreshold": "2",
                    "Interval": "10",
                    "Target": "HTTP:4984/",
                    "Timeout": "5",
                    "UnhealthyThreshold": "10"
                },
                "Listeners": [{
                    "InstancePort": "4984",
                    "InstanceProtocol": "HTTP",
                    "LoadBalancerPort": "4984",
                    "Protocol": "HTTP"
                },
                {
                    "InstancePort": "4985",
                    "InstanceProtocol": "HTTP",
                    "LoadBalancerPort": "4985",
                    "Protocol": "HTTP"
                }
                ],
                "Tags": [{
                    "Key": "Name",
                    "Value": "SyncGateway ELB"
                }],
                "Scheme": "internet-facing",
                "Subnets": [{
                    "Ref": "PublicSubnet1ID"
                },
                {
                    "Ref": "PublicSubnet2ID"
                },
                {
                    "Fn::If": [
                        "3Subnets",
