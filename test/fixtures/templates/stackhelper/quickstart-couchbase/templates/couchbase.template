                },
                {
                    "Fn::If": [
                        "4Subnets",
                        {
                            "Ref": "PublicSubnet4ID"
                        },
                        {
                            "Ref": "AWS::NoValue"
                        }
                    ]
                }
                ],
                "SecurityGroups": [{
                    "Ref": "SyncGatewayELBSecurityGroup"
                }]
            }
